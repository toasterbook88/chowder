# Clawdbot Configuration
# This file contains settings for different environments

# Environment settings
export CLAWDBOT_ENV="${CLAWDBOT_ENV:-development}"
export CLAWDBOT_LOG_LEVEL="${CLAWDBOT_LOG_LEVEL:-info}"

# Ollama settings
export OLLAMA_API_KEY="${OLLAMA_API_KEY:-ollama-local}"
export OLLAMA_BASE_URL="${OLLAMA_BASE_URL:-http://127.0.0.1:11434/v1}"
export OLLAMA_DEFAULT_MODEL="${OLLAMA_DEFAULT_MODEL:-llama3.3}"

# Gateway settings
export CLAWDBOT_GATEWAY_HOST="${CLAWDBOT_GATEWAY_HOST:-127.0.0.1}"
export CLAWDBOT_GATEWAY_PORT="${CLAWDBOT_GATEWAY_PORT:-18789}"

# Nix settings
export NIXPKGS_URL="${NIXPKGS_URL:-https://channels.nixos.org/nixos-unstable/nixexprs.tar.xz}"

# Development settings
if [ "$CLAWDBOT_ENV" = "development" ]; then
    export CLAWDBOT_DEBUG="${CLAWDBOT_DEBUG:-true}"
    export CLAWDBOT_AUTO_RESTART="${CLAWDBOT_AUTO_RESTART:-true}"
fi

# Production settings
if [ "$CLAWDBOT_ENV" = "production" ]; then
    export CLAWDBOT_DEBUG="${CLAWDBOT_DEBUG:-false}"
    export CLAWDBOT_AUTO_RESTART="${CLAWDBOT_AUTO_RESTART:-true}"
    export CLAWDBOT_LOG_LEVEL="${CLAWDBOT_LOG_LEVEL:-warn}"
fi